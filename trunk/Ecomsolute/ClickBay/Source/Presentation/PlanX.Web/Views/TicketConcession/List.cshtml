@model TicketConcessionListModel
@using PlanX.Web.Models.ClickBay;
<script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>
<script src="~/Scripts/jquery.simplePagination.js"></script>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_ColumnsOne.cshtml";
    var i = 0;
}
<script>
    $(function () {
        //$(".datepicker").datepicker();
        //$(".timepicker").timepicker();

        $('#DepartDateSearch').datepicker({
            'format': 'yyyy-m-d',
            'autoclose': true
        });

        var availableTags = @(Html.Raw(Json.Encode(Model.listPlace)));
        var availableType = @(Html.Raw(Json.Encode(Model.listType)));

        $("#TicketTypeSearch").autocomplete({
            source: availableType,
            minLength: 0
        }).focus(function () {
            if (this.value == "") {
                $(this).autocomplete("search");
            }
        });

        $("#FromPlaceSearch").autocomplete({
            source: availableTags,
            minLength: 0
        }).focus(function () {
            if (this.value == "") {
                $(this).autocomplete("search");
            }
        });

        $("#ToPlaceSearch").autocomplete({
            source: availableTags,
            minLength: 0
        }).focus(function () {
            if (this.value == "") {
                $(this).autocomplete("search");
            }
        });


    });

    // initialize input widgets first

</script>
<div class="wrapper-body">
    <div class="wrapper-content inline">
        <section class="section-top">
            <div class="breadcrumb">
                <p><span>Trang chủ</span><img src="~/Themes/ClickBay/Content/images/forward-icon.png" class="icon-small" /><span class="active">Nhượng vé máy bay</span></p>
            </div>
        </section>
        <section class="section">
            <div class="title">
                <span class="title-left">Nhượng Vé Máy Bay</span>
                <span class="title-right"><a class="postitem" name="postitem" href="@Url.Action("TicketConcessionPost", "TicketConcession")">Đăng tin nhượng vé</a></span>
            </div>
        </section>
        <section class="section">
            <div class="search">
                @using (Html.BeginForm())
                {
                    @Html.HiddenFor(x =>x.Page)
                    @Html.HiddenFor(x => x.PageSize)

                    @Html.TextBoxFor(model => model.TicketTypeSearch, new { @placeholder = "Loại vé" })
                    @Html.TextBoxFor(model => model.PassengerNameSearch, new { @placeholder = "Tên khách hàng" })
                    @Html.TextBoxFor(model => model.FromPlaceSearch, new { @placeholder = "Điểm đi" })
                    @Html.TextBoxFor(model => model.ToPlaceSearch, new { @placeholder = "Điểm đến" })
                    @Html.TextBoxFor(model => model.DepartDateSearch, new { @placeholder = "Ngày bay" })
                    <input type="submit" class="default" value="Tìm vé" name="searchTicket" id="searchTicket" />
                }
            </div>
        </section>
        <section class="section">
            <div class="ticketconcesstable" id="top">
                <div class="title-table">
                    <div>Loại vé</div>
                    <div>Tên hành khách</div>
                    <div>Chặng bay</div>
                    <div>Ngày đi</div>
                    <div>Giá vé</div>
                    <div class="detail-btn">Chi tiết</div>
                </div>
                @foreach (var item in Model.listItem)
                {
                    i++;
                    var oll = (i % 2 == 0) ? "oll" : " ";
                    <div class="item @oll">
                        <div>@item.TicketType</div>
                        <div>
                            @item.PassengerName
                        @if (item.IsRename)
                        {
                            <text> <br />(Có thể đổi)</text>
                        }
                    </div>
                    <div class="place">
                        @item.FromPlace - @item.ToPlace
                        @if (item.RoundTrip)
                        {
                            <text> <br />(Khứ hồi)</text>
                        }
                    </div>
                    <div>
                        @string.Format("{0} {1}h{2}'", item.DepartDate.ToString("dd/MM/yyyy"), item.DepartDate.Hour.ToString(), item.DepartDate.Minute.ToString())
                    @if (item.RoundTrip)
                    {
                        <text>   @string.Format(" - {0} {1}h{2}'", item.ReturnDate.ToString("dd/MM/yyyy"), item.ReturnDate.Hour.ToString(), item.ReturnDate.Minute.ToString())</text>

                    }
                </div>
                <div>@item.TicketPrice</div>
                <div class="detail-btn" onclick="ShowDetail(@item.Id)" style="cursor:pointer">Chi tiết</div>
            </div>
                    <div class="detail-ticket-@item.Id detail-ticket" style="display:none">
                        <div>Email :<b> @item.ContactEmail</b></div>
                        <div>   Tên liên hệ :<b> @item.ContactName</b></div>
                        <div> Địa thoại :<b>@item.ContactPhone</b></div>
                        <div class="note"> Ghi chú :<b> @item.Description</b></div>
                    </div>

                }

            </div>
            <div class="clear"></div>
            <div id="pages"></div>

        </section>
    </div>
</div>
<script>
    function ShowDetail(id)
    {
        if( $(".detail-ticket-" + id).css('display') == 'none')
        {
            $(".detail-ticket").slideUp();
            $(".detail-ticket-" + id).slideDown();
        }
        else
        {
            $(".detail-ticket-" + id).slideUp();
        }
    }

    $(function() {
        if(@Model.Page != 1)
        {  
            document.getElementById( 'top' ).scrollIntoView();
        }
        $('#pages').pagination({
            items: @Model.Total,
            itemsOnPage:  @Model.PageSize,
            displayedPages:5,
            currentPage:@Model.Page,
            cssStyle: 'light-theme'
        });
    });

    function GetData(pageindex)
    {
        $('#Page').val(pageindex);
        $("#searchTicket").click();

    }
</script>
<style>
    div#pages {
        float: right;
        padding: 30px 0;
    }
    .item:hover, .item.oll:hover {
        background: #C5F3EC;
    }

    .note {
        width: 46% !important;
    }

    .detail-ticket {
        background: rgb(242, 255, 158);
    }

        .detail-ticket div {
            width: 18%;
        }

    .title-table {
        width: 100%;
        line-height: 30px;
        background: rgb(24, 155, 150);
        color: white;
    }

    .ticketconcesstable div {
        float: left;
    }

    .ticketconcesstable .title-table div {
        width: 17.9%;
        text-align: center;
        border-left: 1px solid #eaeaea;
    }

    .place {
        text-align: left;
    }

    .ticketconcesstable .item, .ticketconcesstable .detail-ticket {
        width: 100%;
        line-height: 50px;
        border-bottom: 1px solid #eaeaea;
    }

        .ticketconcesstable .item div {
            width: 17.9%;
            line-height: 30px;
            text-align: center;
        }

    .detail-btn {
        width: 116px !important;
    }

    .item.oll {
        background: #eee;
    }


    ul.simple-pagination {
        list-style: none;
    }

    .simple-pagination {
        display: block;
        overflow: hidden;
        padding: 0 5px 5px 0;
        margin: 0;
    }

        .simple-pagination ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .simple-pagination li {
            list-style: none;
            padding: 0;
            margin: 0;
            float: left;
        }

    .light-theme a, .light-theme span {
        float: left;
        color: #666;
        font-size: 14px;
        line-height: 24px;
        font-weight: normal;
        text-align: center;
        border: 1px solid #BBB;
        min-width: 14px;
        padding: 5px 10px;
        margin: 0 5px 0 0;
        border-radius: 3px;
        box-shadow: 0 1px 2px rgba(0,0,0,0.2);
        background: #efefef; /* Old browsers */
        background: -moz-linear-gradient(top, #ffffff 0%, #efefef 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(100%,#efefef)); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top, #ffffff 0%,#efefef 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top, #ffffff 0%,#efefef 100%); /* Opera11.10+ */
        background: -ms-linear-gradient(top, #ffffff 0%,#efefef 100%); /* IE10+ */
        background: linear-gradient(top, #ffffff 0%,#efefef 100%); /* W3C */
    }

        .light-theme a:hover {
            text-decoration: none;
            background: #FCFCFC;
        }

    .light-theme .current {
        background: #666;
        color: #FFF;
        border-color: #444;
        box-shadow: 0 1px 0 rgba(255,255,255,1), 0 0 2px rgba(0, 0, 0, 0.3) inset;
        cursor: default;
    }

    .light-theme .ellipse {
        background: none;
        border: none;
        border-radius: 0;
        box-shadow: none;
        font-weight: bold;
        cursor: default;
    }
</style>