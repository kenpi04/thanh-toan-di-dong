@model BookingModel
@{
    var listPriceNet = Model.TotalPriceForPassengerTypes.Where(x => x.Code=="NET").OrderBy(x => x.PassengerType).ToList();
    var listFee = Model.TotalPriceForPassengerTypes.Where(x => x.Code != "NET" && x.Code!="DIS").OrderBy(x => x.PassengerType).ToList();
    var totalPrice = Model.TotalPriceForPassengerTypes.Where(x => x.Code != "DIS").Sum(x => (x.Price));
    string currencyCode = string.IsNullOrEmpty(Model.TicketInfo.Currency) ? "VND" : Model.TicketInfo.Currency;
}
<input type="hidden" value="@currencyCode" id="currencyCode" name="currencyCode">
<article>
    <aside>
        <div class="box-sort priceDetail">
            <div class="title box-head">
                <span class="title-left" style="width:100%">Chi Tiết Giá</span>
            </div>
            <div class="detail">
                <h4><span>Giá cơ bản</span></h4>
                <div class="box-content">
                    @foreach (var pr in listPriceNet)
                    {
                        <p><span>@T("PasserType." + pr.PassengerType)</span> <span>@pr.Quantity x @pr.Price.ToString("0,#") @currencyCode</span></p>
                    }
                </div>
                <h4><span>Thuế và phí</span></h4>
                <div class="box-content">
                    @foreach (var pr in listFee)
                    {
                        <p><span>@T("PasserType."+pr.PassengerType)</span> <span>@pr.Quantity x @pr.Price.ToString("0,#") @currencyCode</span></p>
                    }
                </div>
                <div class="box-content sumPrice">
                    <p><span>Tổng giá</span><span id="sumprice-totalprice">@totalPrice.ToString("0,#") @currencyCode</span></p>
                    <p><span>Hành lý thêm</span> <span id="sumprice-totalbaggagefee" data-price="0">0 @currencyCode</span></p>
                    @if(Model.DiscountAmount > 0) { 
                    <p><span>Giảm giá</span> <span id="sumprice-totaldiscountamount">- @Model.DiscountAmount.ToString("0,#") @currencyCode</span></p>
                    }
                </div>
                <div class="box-content sumPrice">
                    <p><span>TỔNG</span> <span id="sumprice-totalfinaly" data-price="@(totalPrice-Model.DiscountAmount)">@((totalPrice-Model.DiscountAmount).ToString("0,#")) @currencyCode</span></p>
                </div>
            </div>
        </div>
    </aside>
