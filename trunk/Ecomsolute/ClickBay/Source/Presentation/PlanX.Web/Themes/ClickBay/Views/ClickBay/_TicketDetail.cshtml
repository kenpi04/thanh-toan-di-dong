@model TicketModel
<table width="100%" cellspacing="0" cellpadding="0" style="display:none" id="tb-@Model.Id">
    <tbody class="view-detail-flight">

        <tr>
            <td valign="top">
                <p>
                    Từ <b>@Model.FromPlace</b>, @Model.FromCountry
                </p>
                <p>
                    Sân bay
                    : <b>@Model.FromAirport </b>(@Model.FromAirportCode)<br>
                </p>
                <p>
                    <!---->
                    <b>@Model.DepartTime.ToString("hh:mm")</b>, @Model.DepartTime.ToString("dd/MM/yyyy")
                </p>
            </td>
            <td valign="top">
                <p>
                    tới <b>@Model.ToPlace</b>, @Model.ToCountry
                </p>
                <p>
                    Sân Bay
                    : <b>@Model.ToAirport</b> (@Model.ToAirportCode)
                </p>
                <p>
                    <!---->
                    <b>19:15</b>, 05/12/2014
                </p>
            </td>
            <td style="">
                <table width="100%" cellpadding="0" cellspacing="0">
                    <!-- <tr>
                                <td colspan="2" style=" text-align:center;">
                                    Tổng thời gian : <b>{Duration}</b>
                                </td>
                            </tr>-->
                    <tbody>
                        <tr>
                            <td style="text-align: right;">
                                <img align="absmiddle" src="/Images/Icon/Flight/Airline/AirlineLogo/smBL.gif">
                            </td>
                            <td style="line-height: 18px; padding: 0;">
                                @Model.AirlineName <br>(<b>@Model.FlightNumber</b>)
                                <br>
                                <span style="display: {TicketClassDisplay}">
                                    Loại vé
                                    : <b>@Model.HangVe</b>
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td style="line-height: 18px; padding: 0;"></td>
                        </tr>
                    </tbody>
                </table>
            </td>
        </tr>
        <tr></tr>
        <tr>
            <td colspan="3" style="text-align: right;display:none">
                <a style="background: #2286B7; color: #fff; font-weight: bold; padding: 2px 7px" href="/Abay/Detail/FareRuleFlightDomestic.aspx?ticketClass=L&amp;airline=BL&amp;airport=HAN" class="lightview rightmost view-rule" data-lightview-type="iframe" data-lightview-options="width: 650, height:600">
                    Xem Điều Kiện Vé
                </a>
            </td>
        </tr>
    </tbody>
</table>
