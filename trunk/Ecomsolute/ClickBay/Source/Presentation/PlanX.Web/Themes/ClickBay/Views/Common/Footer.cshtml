@model FooterModel
@using PlanX.Web.Models.Common;

<footer class="footer">
    <div class="container">
        <div class="block">
            <img src="@Url.Content("~/Themes/ClickBay/Content/images/logo-small.png")">
            <span>www.clickbay.com.vn</span>
        </div>
        <div class="block">
            <div class="block-title">
                Thông tin liên hệ
            </div>
            <p>
                <b>Công ty TNHH PK Pro</b>
                Địa chỉ: 114/12/18a ,Đường số 6,KP6 Quận BT,TPHCM<br>
                Điện thoại:093.448.124<br>
                Email:duyvu@clickbay.com.vn<br>
                Website:clickbay.com.vn
            </p>
        </div>
        <div class="block support">
            <div class="block-title">
                Hổ trợ khách hàng
            </div>
            <ul>
                <li><a>Hướng dẫn thanh toán</a></li>
                <li><a>Thông tin chuyển khoản</a></li>
                <li><a>Hướng dẫn đặt vé</a></li>
                <li><a>Câu hỏi thường gặp</a></li>
                <li><a>Hổ trợ khách hàng</a></li>
            </ul>
        </div>
        <div class="block">
            <div class="block-title">
                Kết nối với chúng tôi
            </div>
            <p>Chúng tôi sẽ gửi cho bạn khuyến mãi mới nhất</p>
            <form name="frm-newsletter-email" id="frm-newsletter-email" ajax="true">
                <p>
                    <input class="input-email" type="email" placeholder="Nhập email của bạn" name="email" id="email" data-val="true" data-val-required="Bạn chưa nhập email" data-val-email="Email không đúng">
                    <input class="btn-send" type="submit" name="btn-newsletter-email" id="btn-newsletter-email">
                </p>
                @Html.ValidationMessage("email")
            </form>
            <p style="text-align:center">

                <img src="@Url.Content("~/Themes/ClickBay/Content/images/facebook.png")">
                <img src="@Url.Content("~/Themes/ClickBay/Content/images/google.png")">
                <img src="@Url.Content("~/Themes/ClickBay/Content/images/link.png")">
            </p>
        </div>
    </div>
</footer>
<script>
    $("#frm-newsletter-email[ajax=true]").submit(function (e) {
        e.preventDefault();

        var form_data = $(this).serialize();
        $.ajax({
            url: '@Url.RouteUrl("SubscribeNewsletter")',
            type: 'POST',
            data: form_data,
            cache: false,
            success: function (result) {
                $("input[id=email]").val("");
                $("#frm-newsletter-email").find(".field-validation-valid").append(result.Result);
            }
        });

        
        //var span = $("#frm-newsletter-email").find(".field-validation-valid");
        //$("Gửi email thành công").appendTo("span")
        
        //return false;
    })
</script>