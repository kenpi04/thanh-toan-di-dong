@model LoginModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 <div class="col-md-6">
@using (Html.BeginForm())
{ 
    if(ViewBag.Error!=null)
    {
  <p class="bg-warning" style="color:red;height:30px">@ViewBag.Error</p>
}
  <div class="form-group">
    <label for="txtPhone">Tên đăng nhập:</label>
    @Html.TextBoxFor(x => x.User, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
    @Html.ValidationMessageFor(x => x.User)
  
  </div>
  <div class="form-group">
    <label for="txtPhone">Mật khẩu:</label>
    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
    @Html.ValidationMessageFor(x => x.Password)
  
  </div>
     <div class="form-group">
    <label for="txtPhone">Nhập lại mật khẩu:</label>
    @Html.PasswordFor(x => x.RePassword, new { @class = "form-control", placeholder = "Nhập lại mật khẩu" })
    @Html.ValidationMessageFor(x => x.Password)
  
  </div>
    
  <button type="submit" class="btn btn-primary">Đăng nhập</button>


}
    </div>


