@model DistrictModel
@{
    //page title
    ViewBag.Title = @T("Admin.ContentManagement.District.Edit").Text;
}
@using (Html.BeginForm())
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-content.png")" alt="" />
            @T("Admin.ContentManagement.District.AddNew") @Html.ActionLink("(" + T("Admin.ContentManagement.District.BackToList") + ")", "DistrictList")
        </div>
        <div class="options">
            <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="t-button" value="@T("Admin.Common.SaveContinue")" />

            <span id="district-delete" class="t-button">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdateDistrict", Model)
}
@Html.DeleteConfirmation("DistrictDelete", "district-delete")


