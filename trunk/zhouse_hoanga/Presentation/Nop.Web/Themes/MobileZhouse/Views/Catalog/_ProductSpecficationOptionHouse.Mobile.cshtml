@model Nop.Web.Models.Catalog.ProductDetailsModel
  <table class="table-detail">
                        <tbody>
                            <tr>
                                <td >Tình trạng</td>
                                <td>@Model.Status</td>

                            </tr>
                            <tr>
                                <td >Pháp lý</td>
                                <td>@Model.PhapLy</td>

                            </tr>
                            <tr>
                                <td >Khu vực</td>
                                <td>@(Model.DistrictName??"-")</td>
                               
                            </tr>
                            <tr>
                                <td >Hình thức</td>
                                <td>@(Model.CateName??"-")</td>
                            </tr>
                            <tr>
                                <td >Hướng</td>
                                <td>@(Model.Directors??"-")</td>
                            </tr>
                            <tr>
                                <td >Phòng ngủ</td>
                                <td>@Model.BedRooms </td>
                            </tr>
                            <tr>
                                <td >Phòng tắm</td>
                                <td>@Model.BathRooms </td>
                            </tr>

                            <tr>
                                <td >Diện tích</td>
                                <td>@(!string.IsNullOrWhiteSpace(Model.Area) ? Model.Area +"m2": "-")  (@Model.Width.ToString("#.##") x @Model.Dept.ToString("#.##")) </td>
                            </tr>
                            <tr>
                                <td >Số tầng</td>
                                <td>@(Model.AreaUse > 0 ? Model.NumberFloors:"-")</td>
                            </tr>
                            <tr>
                                <td >Diện tích sử dụng</td>
                                <td>@(Model.AreaUse>0 ? Model.AreaUse.ToString("#.##") +"m2": "-") </td>
                            </tr>
                         
                          
                            <tr>
                                <td >Thích hợp:</td>
                                <td>
                                      @if (Model.ThichHop.Count > 0)
                                    {
                                          @Model.ThichHop.Aggregate((a, b) => a + "," + b)
                                    }
                                    else
                                    { <text>-</text>}

                                </td>
                                
                            </tr>

                            <tr>
                                <td >Cơ sở vật chất</td>
                                <td>
                                    @if (Model.Facilities.Count > 0)
                                    {
                                        @Model.Facilities.Select(x => x.Text).Aggregate((a, b) => a + "," + b)
                                    }
                                    else
                                    { <text>-</text>}

                                </td>
                            </tr>
                                <tr>
                                    <td >Môi trường xung quanh</td>
                            
                                    <td>
                                                 @if (Model.Environments.Count > 0)
                                     {
                                        @Model.Environments.Select(x => x.Text).Aggregate((a, b) => a + "," + b)
                                     }
                                    else
                                    {
                                     <text>-</text>
                                     }</td>
                                </tr>
                            
                        </tbody>
                    </table>
