@model Nop.Web.Models.Catalog.SearchModel
@using (Html.BeginRouteForm("ProductSearch", FormMethod.Get, new {id="frmSearchHOme" }))
{
<div class="wrapper" style="padding-top:63px">
<div class="topInfo">
        	<div class="pinkBg">            	
                <div class="zhouse">
                    @*<span class="link-z">
                    zHouse.com.vn 
                        </span>*@
                     <h1 class="slogan">Tìm kếm bất động sản</h1>
                     <div class="clearBoth"></div>
                </div>
                @Html.DropDownList("wardId", Model.Districts, new { @class = "box" })
               @Html.DropDownList("priceString", Model.PriceRange, new { @class = "box" })
                @Html.DropDownList("categoryId", Model.AvailableCategories, new { @class = "box" })         
                @Html.DropDownList("attributeOptionIds", Model.Directories, new { @class = "box" })                     
                @Html.TextBoxFor(model => model.Q, new { style="font-size:12px;width:134px;padding-left:10px;", placeholder = "mã tin" })
                <input type="submit" style="width:152px" class="blueBtn" value="tìm kiếm">
                <div class="clearBoth"></div>                
            </div>
        </div>
    <div style="width:400px;height:300px;overflow:hidden;cursor:pointer;float:left">
        
    </div>
    <div style="box-sizing:border-box;width:280px;border-left:1px solid #FFF;float:left;height:300px"></div>
</div>    
    
    @*@Html.FptBanner(Position: 3, stateId: 0, viewName: "BannerSlideShow")*@ 
    @*<div class="adv-yourhouse" onclick="setLocation('@Url.RouteUrl("InsertProduct")')"></div>*@  
}
<script type="text/javascript">
    $(function () {
      //  $('#slider').nivoSlider({ effect: 'fade',controlNav:false });
        $("#frmSearchHOme").submit(function () {
            var data=$(this).serialize();
            $.get("@Url.Action("GetSlugFromId")", data, function (d) {
                window.location.href = d;
            })
            return false;
        })
    })
</script>
    
