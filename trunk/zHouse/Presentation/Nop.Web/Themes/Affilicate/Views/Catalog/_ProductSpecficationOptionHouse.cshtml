@model Nop.Web.Models.Catalog.ProductDetailsModel
<table id="detail-info">
    <tbody>
        <tr>
            <td class="greyBgTD">Tình trạng</td>
            <td>@Model.Status</td>
        </tr>
        @if (!String.IsNullOrEmpty(Model.PhapLy))
        {
            <tr>
                <td class="greyBgTD">Pháp lý</td>
                <td>@Model.PhapLy</td>

            </tr>}
        <tr>
            <td class="greyBgTD">Khu vực</td>
            <td>@(Model.DistrictName ?? "-")</td>

        </tr>
        <tr>
            <td class="greyBgTD">Hình thức</td>
            <td>@(Model.CateName ?? "-")</td>
        </tr>
        @if (!String.IsNullOrEmpty(Model.Directors))
        {
            <tr>
                <td class="greyBgTD">Hướng</td>
                <td>@(Model.Directors ?? "-")</td>
            </tr>}
        @if (!String.IsNullOrEmpty(Model.BedRooms))
        {
            <tr>
                <td class="greyBgTD">Phòng ngủ</td>
                <td>@Model.BedRooms </td>
            </tr>}
        @if (!String.IsNullOrEmpty(Model.BathRooms))
        {
            <tr>
                <td class="greyBgTD">Phòng tắm</td>
                <td>@Model.BathRooms </td>
            </tr>}
        <tr>
            <td class="greyBgTD">Diện tích</td>
            <td>@(!string.IsNullOrWhiteSpace(Model.Area) ? Model.Area + "m2" : "-")  (@Model.Width.ToString("0.##") x @Model.Dept.ToString("0.##")) </td>
        </tr>
        <tr>
            <td class="greyBgTD">Số tầng</td>
            <td>@(Model.AreaUse > 0 ? Model.NumberFloors : "-")</td>
        </tr>
        <tr>
            <td class="greyBgTD">Diện tích sử dụng</td>
            <td>@(Model.AreaUse > 0 ? Model.AreaUse.ToString("0.##") + "m2" : "-") </td>
        </tr>
        <tr>
            <td class="greyBgTD">Thích hợp:</td>
            <td>
                @if (Model.ThichHop.Count > 0)
                {
                    @Model.ThichHop.Aggregate((a, b) => a + ", " + b)
                }
                else
                { <text>-</text>}
            </td>
        </tr>
        <tr>
            <td class="greyBgTD">Cơ sở vật chất</td>
            <td>
                @if (Model.Facilities.Count > 0)
                {
                    @Model.Facilities.Select(x => x.Text).Aggregate((a, b) => a + ", " + b)
                }
                else
                { <text>-</text>}
            </td>
        </tr>
        <tr>
            <td class="greyBgTD">Môi trường xung quanh</td>
            <td>
                @if (Model.Environments.Count > 0)
                {
                    @Model.Environments.Select(x => x.Text).Aggregate((a, b) => a + ", " + b)
                }
                else
                {
                    <text>-</text>
                }
            </td>
        </tr>
        <tr><td colspan="2"></td></tr>
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var trLast = 646 - $("#detail-info").height();
        if (trLast > 0) { $("#detail-info tr:last").attr("height", trLast); } else { $("#detail-info tr:last").hide(); }
    })
</script>