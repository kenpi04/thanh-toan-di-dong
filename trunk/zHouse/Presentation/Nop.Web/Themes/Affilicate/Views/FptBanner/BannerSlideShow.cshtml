@model Nop.Web.Models.Common.FptBannerShowModel
@{
    Html.AddScriptParts("~/Scripts/jquery.flexslider.js");
    Html.AddCssFileParts("~/Themes/Zhouse/Content/flexslider.css");
}
<div id="slider" class="flexslider">

    <ul class="slides">
        @foreach (var i in Model.Banners)
        {
            <li>
                @if (i.BannerType == 1)
                {
                    <a href="@i.Url" target="@i.Target">
                        <img src="@i.PictureUrl" class="stretchImg"/></a>}
                else
                {
                    <a href="@i.Url" target="@i.Target">@Html.Raw(i.Description)</a>
                }
            </li>
        }

    </ul>


</div>
<script type="text/javascript">
    $(window).load(function () {
        $('#slider').flexslider({
            animation: "fade",
            controlNav: false,
            randomize:true,
            directionNav:false
        });
    });
    
</script>
