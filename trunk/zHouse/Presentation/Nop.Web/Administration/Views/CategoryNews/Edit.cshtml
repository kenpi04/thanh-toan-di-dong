@model CategoryNewsModel
@{
    //page title
    ViewBag.Title = @T("Admin.Catalog.Categories.EditCategoryDetails").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "category-form" }))
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.Catalog.Categories.EditCategoryDetails") - @Model.Name @Html.ActionLink("(" + T("Admin.Catalog.Categories.BackToList") + ")", "List")
        </div>
        <div class="options">     
        @if (ViewBag.ManageCategoryNewsEdit)
        {       
            <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="t-button" value="@T("Admin.Common.SaveContinue")" />
        }
        @if (ViewBag.ManageCategoryNewsDelete)
        {
            <span id="category-delete" class="t-button">@T("Admin.Common.Delete")</span>
        }
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("category-delete")