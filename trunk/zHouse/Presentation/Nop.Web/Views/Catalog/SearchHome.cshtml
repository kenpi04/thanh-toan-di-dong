@model Nop.Web.Models.Catalog.SearchModel
@{
    
    Html.AppendScriptParts("~/Scripts/jquery.nivo.slider.js");
}
@using (Html.BeginRouteForm("ProductSearch", FormMethod.Get, new {id="frmSearchHOme" }))
{
  <div class="wrapper">
<div class="topInfo">
        	<div class="pinkBg">            	
                <img src="@Url.Content("~/Themes/Zhouse/Content/images/zhouse.png")"/> <br>
                @Html.DropDownList("districtId", Model.Districts, new { @class = "box" })
               @Html.DropDownList("priceString", Model.PriceRange, new { @class = "box" })
                @Html.DropDownList("categoryId", Model.AvailableCategories, new { @class = "box" })         
                @Html.DropDownList("attributeOptionIds", Model.Directories, new { @class = "box" })
                     
<br>
                <input type="submit" style="float:right;margin-right:4px" class="blueBtn" value="tìm kiếm">
                <div class="clearBoth"></div>
            </div>
        </div>
</div>
    <div id="slider">
    
       
        <img src="@Url.Content("~/Themes/Zhouse/Content/images/slide2.jpg")" class="stretchImg">
        <img src="@Url.Content("~/Themes/Zhouse/Content/images/slide4.jpg")" class="stretchImg">
        <img src="@Url.Content("~/Themes/Zhouse/Content/images/slide5.jpg")" class="stretchImg">
        
      
    </div>
}
<script type="text/javascript">
    $(function () {
        $('#slider').nivoSlider({ effect: 'fade',controlNav:false });
        $("#frmSearchHOme").submit(function () {
            var data=$(this).serialize();
            $.get("@Url.Action("GetSlugFromId")", data, function (d) {
                window.location.href = d;
            })
            return false;
        })

    })
</script>
    
