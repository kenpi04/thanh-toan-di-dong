            <input type="button" class="blueBigBtn" onclick="setLocation('@Url.RouteUrl("ProductSearch")')" value="Tìm kiếm ngôi nhà trong mơ của bạn">
            <br>
            <div class="smallPinkText">Hơn 1.000.000 căn hộ, căn nhà để bạn tìm kiếm và chọn lựa trên zHOUSE.com.vn</div>
        </center>

        <div class="intro">
         
            @Html.Action("HomePageNewsCate","News")
          


            <div class="threeCol" style="margin: 0;float:right">
                <div class="whiteBgBig">
                    <ul>
                        @foreach(var i in Model)
                        {
                            <li><a title="@i.Title" href="@Url.RouteUrl("Topic", new {SystemName=i.SystemName })">@i.Title</a></li> 
                        
                        }
                        
                      
                    </ul>
                    <div class="nhonDown"></div>
                </div><!---whiteBgBig---->
                <div class="pinkNarrowTitle">Dịch vụ</div>
            </div><!--threeCol--->


