        <table>
            <tbody>
                <tr>
                    <td colspan="4"><div class="pinkNarrowTitle">Tại sao bạn chọn mua và bán Nhà trên zHouse.com.vn?</div></td>
                </tr>
                <tr>
                    <td>
                        <img src="@Url.Content("~/Themes/Zhouse/Content/images/h1.png")"><br><br>
                        Chỉ bán nhà có sổ hồng
                    </td>
                    <td>
                        <img src="@Url.Content("~/Themes/Zhouse/Content/images/h2.png")"><br><br>
                        Thông tin đa dạng và đầy đủ
                    </td>
                    <td>
                        <img src="@Url.Content("~/Themes/Zhouse/Content/images/h3.png")"><br><br>
                        Đội ngũ chuyên gia
                    </td>
                    <td>
                        <img src="@Url.Content("~/Themes/Zhouse/Content/images/h4.png")"><br><br>
