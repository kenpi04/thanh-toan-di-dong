@model LoginModel
@{
    Layout = null;
    
    }
@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập</title>
     <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.css" rel="stylesheet" />
    @Styles.Render("~/Content/themes/base/css")
    
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <link href="/Administration/Themes/css/charisma-app.css" rel="stylesheet" />
</head>
<body>
   <div class="row-fluid">
	        <div class="span12 center login-header" style="text-align:center;background:#ffd800;color:#fff">
		        <h2>THANHTOANDIDONG.COM.VN ADMIN PANEL</h2>
	        </div><!--/span-->
        </div><!--/row-->
			
        <div class="row-fluid">
	        <div class="well span5 center login-box" style="text-align:left">
		        <div style="text-align:center" class="alert alert-info">
			        Vui lòng đăng nhâp để vào khu vực quản trị.
		        </div>
@using (Html.BeginForm())
{ @Html.AntiForgeryToken()
    if(ViewBag.Error!=null)
    {
  <p class="bg-warning" style="color:red;height:30px">@ViewBag.Error</p>
}
  <div class="form-group">
    <label for="txtPhone">Tên đăng nhập:</label>
    @Html.TextBoxFor(x => x.User, new { @class = "form-control", placeholder = "Nhập tên đăng nhập" })
    @Html.ValidationMessageFor(x => x.User)
  
  </div>
  <div class="form-group">
    <label for="txtPhone">Mật khẩu:</label>
    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu" })
    @Html.ValidationMessageFor(x => x.Password)
  
  </div>
    
  <button type="submit" class="btn btn-primary">Đăng nhập</button>


}
    </div>
            </div>
    
</body>
</html>
