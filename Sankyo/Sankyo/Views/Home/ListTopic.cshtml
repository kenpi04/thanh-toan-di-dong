@model List<Domain.Entity.Topic>
@{
    ViewBag.Title = "Danh sách trang";
    Layout = "~/Views/Shared/_Layout.cshtml";

    }

<input type="button" onclick="window.location.href='@Url.RouteUrl("AddTopic")'" class="btn" value="Thêm trang" />
<table class="table-data" style="width:100%">
    <tr>
        <td class="title" colspan="4">
            Danh sách  trang
        </td>
    </tr>
    @foreach (var row in Model)
    { 
        <tr>
            <td>@row.Id</td>
            <td>@row.Name</td>
            <td>@row.Title</td>
            <td>
              <a href="@Url.Action("AddTopic", new {id=row.Id })">Sửa</a> |
            <a href="@Url.Action("DeleteTopic", new {id=row.Id })">Xóa</a>
            </td>
        </tr>
    }
</table>
