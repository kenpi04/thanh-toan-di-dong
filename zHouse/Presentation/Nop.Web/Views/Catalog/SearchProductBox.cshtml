@model Nop.Web.Models.Catalog.SearchModel

<div>
    <div class="box-search">
    <b>Theo vị trí</b>
    <ul>
        @foreach (var i in Model.Districts)
        { 
            <li>
                <input type="checkbox" id="ckDist_@i.Value" name="DistrictIds" value="@i.Value" />
                <label for="ckDist_@i.Value">@i.Text</label>
            </li>
        }
    </ul>
        </div>
    <div class="box-search">
      <b>Theo giá</b>
        @Html.DropDownListFor(x=>x.PriceString,Model.PriceRange)
        </div>
    <div class="box-search">
        <b>Theo loại</b>
        <ul>
            @foreach (var i in Model.AvailableCategories)
            { 
                <li>
                    <input type="checkbox" name="Cids" value="@i.Value" id="cate_@i.Value" />
                    <label for="cate_@i.Value">@i.Text</label>
                </li>
            }
        </ul>
        </div>
        <div class="box-search">
        <b>Căn hộ cao cấp</b>
        <ul>
            @foreach (var i in Model.AvailableManufacturers)
            { 
                <li>
                    <input type="checkbox" name="@Model.Mids" value="@i.Value" id="Manu_@i.Value" />
                    <label for="Manu_@i.Value">@i.Text</label>
                </li>
            }
        </ul>
        </div>
  
  
</div>