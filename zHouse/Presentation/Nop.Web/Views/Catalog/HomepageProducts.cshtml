@model IList<ProductOverviewModel>

@using Nop.Web.Models.Catalog;
@{
    Html.AppendScriptParts("~/Scripts/jquery-carousel.js");
}
@if (Model.Count > 0)
{

    <div class="wrapper">
        <div class="intro-product">
            <input type="button" class="backBtn" />
            <input type="button" class="nextBtn" />
            <div id="list-product-home" class="jcarousel">
                <ul>
                    @foreach (var item in Model)
                    {
                        <li>
                            <a href="@Url.RouteUrl("Product", new { SeName = item.SeName })" title="@item.DefaultPictureModel.Title">
                                <div class="introCol">
                                    <div class="new"></div>
                                    <div class="nhon"></div>
                                    <div class="pinkTag">@item.ProductPrice.Price</div>
                                    <img width="270" height="160" alt="@item.DefaultPictureModel.AlternateText" src="@item.DefaultPictureModel.ImageUrl" title="@item.DefaultPictureModel.Title" />
                                    <div class="whiteBg">@item.Name</div>
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>


          
        </div>

    </div>
    <script>
        $("#list-product-home").jcarousel({

        })
        $('.backBtn').jcarouselControl({
            target: '-=1'
        });

        $('.nextBtn').jcarouselControl({
            target: '+=1'
        });
    </script>
}