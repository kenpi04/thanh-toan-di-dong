@model AirlinesConditionModel
@{
    //page title
    ViewBag.Title = "Tạo mới điều kiện giá vé";
}
@using (Html.BeginForm("AirlineConditionCreate", "ClickBay", FormMethod.Post, new { id = "condition-form" }))
{
    <div class="section-header">
        <div class="title">
            <img src="@Url.Content("~/Administration/Content/images/ico-catalog.png")" alt="" />
            @T("Admin.Catalog.Categories.AddNew") @Html.ActionLink("(" + T("Admin.Catalog.Categories.BackToList") + ")", "AirlineConditionList")
        </div>
        <div class="options">
            <input type="submit" name="save" class="t-button" value="@T("Admin.Common.Save")" />
            <input type="submit" name="save-continue" class="t-button" value="@T("Admin.Common.SaveContinue")" />
            <span id="category-delete" class="t-button">@T("Admin.Common.Delete")</span>
        </div>
    </div>
    @Html.Partial("_CreateOrUpdateCondition", Model)
}
@Html.DeleteConfirmation("condition-delete")