@model FooterModel
@using PlanX.Web.Models.Common;
@Html.Action("BlockLink", "Common")
<footer class="footer">
    <div class="container">
        <div class="wrapper-content">
            <div class="block">
                <img class="logo-background" src="@Url.Content("~/Themes/ClickBay/Content/images/logo-2.png")">
                <p class="link-site"><span>www.clickbay.com.vn</span></p>
            </div>
            <div class="block">
                <div class="block-title">
                    Thông tin liên hệ
                </div>
                <p>
                    <b>Công ty TNHH PK Pro</b><br />
                    ĐC: 41 Bế Văn Đàn, P.14, Q.Tân Bình, Tp.Hồ Chí Minh<br>
                    ĐT: (08) 6268 5656 | Fax: (08) 6268 7676<br>
                    Email: thanhphu@pkprovn.com<br>
                    Website: clickbay.com.vn
                </p>
            </div>
            <div class="block support">
                <div class="block-title">
                    Hỗ trợ khách hàng
                </div>
                <ul>
                    <li><a href="@Url.RouteUrl("Topic", new { SystemName = "huong-dan-thanh-toan" })">Hướng dẫn thanh toán</a></li>
                    <li><a href="@Url.RouteUrl("Topic", new { SystemName = "thong-tin-chuyen-khoan" })">Thông tin chuyển khoản</a></li>
                    <li><a href="@Url.RouteUrl("Topic", new { SystemName = "huong-dan-dat-ve" })">Hướng dẫn đặt vé</a></li>
                    <li><a href="@Url.RouteUrl("Topic", new { SystemName = "cau-hoi-thuong-gap" })">Câu hỏi thường gặp</a></li>
                    <li><a href="@Url.RouteUrl("Topic", new { SystemName = "ho-tro-khach-hang" })">Hổ trợ khách hàng</a></li>
                </ul>
            </div>
            <div class="block">
                <div class="block-title">
                    Kết nối với chúng tôi
                </div>
                <p>Chúng tôi sẽ gửi cho bạn khuyến mãi mới nhất</p>
                <form name="frm-newsletter-email" id="frm-newsletter-email" ajax="true" data-url="@Url.RouteUrl("SubscribeNewsletter")">
                    <p>
                        <input class="input-email" type="email" placeholder="Nhập email của bạn" name="email" id="email" data-val="true" data-val-required="Bạn chưa nhập email" data-val-email="Email không đúng">
                        <input class="btn-send" type="submit" name="btn-newsletter-email" id="btn-newsletter-email" value="Gửi">
                    </p>
                    @Html.ValidationMessage("email")
                </form>
                <p style="text-align:center">

                    <img src="@Url.Content("~/Themes/ClickBay/Content/images/facebook.png")">
                    <img src="@Url.Content("~/Themes/ClickBay/Content/images/google.png")">
                    <img src="@Url.Content("~/Themes/ClickBay/Content/images/link.png")">
                </p>
            </div>
        </div>
    </div>
</footer>