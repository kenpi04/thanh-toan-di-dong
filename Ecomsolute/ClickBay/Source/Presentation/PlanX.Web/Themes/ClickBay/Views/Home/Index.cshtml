<div id="popup-map"></div>
<script type="text/javascript">
    $("#popup-map").dialog({
        autoOpen: false,
        closeText: "Đóng",
        dialogClass: "map-dialog",
        draggable: false,
        resizable: false,
        minWidth: 600,
        minHeight: 500,
        modal: true,
    });
    function showMap()
    {
        if ($("#popup-map").html() == "") {
            $("#popup-map").load("@Url.Action("Map","ClickBay")", function () {
                $("#popup-map").dialog('open');
            })
        }
        else
        {
            $("#popup-map").dialog('open');
        }
    }
</script>

