@model IList<PlanX.Web.Models.News.NewsItemModel>
           @{
               Html.AppendScriptParts("~/Scripts/jquery.flexslider.js");
               Html.AppendCssFileParts("~/Themes/Thanhtoandidong/Content/flexslider.css");
           }

@if(Model.Count>0)
{ 
<div id="slider" class="flexslider">
    <ul class="slides">
        @foreach (var banner in Model)
        {
            <li>
                <div class="banner-title">
                    <div class="top_news_1">
                        <a href="@Url.RouteUrl("NewsItem", new { SeName = banner.SeName })"><h3>@banner.Title</h3></a>
                    </div>
                    <div class="top_news_2">
                        <p>
                            <span>
                                @banner.Short.TrimString(100)
                            </span>
                        </p>
                    </div>
                </div>
                <div class="slide_image">
                    <img src="@banner.DefaultPictureModel.FullSizeImageUrl" style="height:100%" alt="@banner.Title" title="@banner.Title">
                </div>
                @*<p class="date"><span class="day">@banner.CreatedOn.ToString("dd/MM")</span><br>
                <span class="year">@banner.CreatedOn.ToString("yyyy")</span>
                </p>*@
            </li>
        }
    </ul>
</div>
<script type="text/javascript">
    $(window).load(function () {
        $('#slider').flexslider({
            animation: "fade",
            controlNav: false,
            randomize: true,
            directionNav: true
        });
    });

</script>
}